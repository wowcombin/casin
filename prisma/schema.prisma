// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  nickname  String   @unique
  role      String   @default("JUNIOR")
  isActive  Boolean  @default(true) @map("isActive")
  createdAt DateTime @default(now()) @map("createdAt")
  updatedAt DateTime @updatedAt @map("updatedAt")

  workData    WorkData[]
  testResults TestResult[]

  @@map("employees")
}

model WorkData {
  id         Int      @id @default(autoincrement())
  employeeId Int      @map("employeeId")
  month      String
  casino     String
  deposit    Float    @default(0)
  withdrawal Float    @default(0)
  card       String?
  createdAt  DateTime @default(now()) @map("createdAt")

  employee Employee @relation(fields: [employeeId], references: [id])

  @@map("work_data")
}

model TestResult {
  id         Int      @id @default(autoincrement())
  employeeId Int      @map("employeeId")
  month      String
  casino     String
  deposit    Float    @default(0)
  withdrawal Float    @default(0)
  card       String?
  createdAt  DateTime @default(now()) @map("createdAt")

  employee Employee @relation(fields: [employeeId], references: [id])

  @@map("test_results")
}

model MonthlyAccounting {
  id         Int      @id @default(autoincrement())
  month      String   @unique
  gbpUsdRate Float    @default(1.27) @map("gbpUsdRate")
  createdAt  DateTime @default(now()) @map("createdAt")
  updatedAt  DateTime @updatedAt @map("updatedAt")

  @@map("monthly_accounting")
}

model Casino {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Float?
  bonus     String?
  createdAt DateTime @default(now()) @map("createdAt")

  @@map("casinos")
}

model Partnership {
  id          Int      @id @default(autoincrement())
  companyName String   @map("companyName")
  email       String
  status      String   @default("PENDING")
  createdAt   DateTime @default(now()) @map("createdAt")

  @@map("partnerships")
}

model JobApplication {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  position  String
  message   String?
  status    String   @default("PENDING")
  createdAt DateTime @default(now()) @map("createdAt")

  @@map("job_applications")
}

model Newsletter {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  subscribedAt DateTime @default(now()) @map("subscribedAt")

  @@map("newsletters")
}
